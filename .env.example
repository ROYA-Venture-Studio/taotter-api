# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/taotter
DB_NAME=taotter

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=7d

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3001

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@taotter.com
FROM_NAME=Taotter

# Email Service (sendgrid, mailgun, smtp)
EMAIL_SERVICE=smtp

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun Configuration (if using Mailgun)
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_API_KEY=your-mailgun-api-key

# SMS Configuration
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=true
ENABLE_GOOGLE_OAUTH=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_PATH=./uploads

# AWS S3 Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=taotter-uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
ACCOUNT_LOCK_TIME=1800000
MAX_LOGIN_ATTEMPTS=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Payment Configuration (if implementing payments)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@taotter.com
SUPER_ADMIN_PASSWORD=change-this-password

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_SECRET=your-session-secret

# OpenAI Configuration (if implementing AI features)
OPENAI_API_KEY=your-openai-api-key

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHING=true

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Development Configuration
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false

# Backup Configuration
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
